<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.model.Agent" table="Agent" schema="testDB">
        <id name="id" column="id"/>
        <property name="firstName" column="firstName"/>
        <property name="middleName" column="middleName"/>
        <property name="lastName" column="lastName"/>
        <property name="organization" column="organization"/>
        <property name="position" column="position"/>
        <list name="users" table="UserAgent" schema="testDB">
            <key>
                <column name="agent_id" not-null="true"/>
            </key>
            <many-to-many not-found="ignore" class="com.model.User">
                <column name="user_id" not-null="true"/>
            </many-to-many>
        </list>
    </class>
    <class name="com.model.Role" table="Role" schema="testDB">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <list name="users" table="UserRole" schema="testDB">
            <key>
                <column name="role_id"/>
            </key>
            <many-to-many not-found="ignore" class="com.model.User">
                <column name="user_id"/>
            </many-to-many>
        </list>
    </class>
    <class name="com.model.User" table="User" schema="testDB">
        <id name="id" column="id"/>
        <property name="username" column="username"/>
        <property name="password" column="password"/>
        <list name="agents" inverse="true" table="UserAgent" schema="testDB">
            <key>
                <column name="user_id" not-null="true"/>
            </key>
            <many-to-many not-found="ignore" class="com.model.Agent">
                <column name="agent_id" not-null="true"/>
            </many-to-many>
        </list>
        <list name="roles" inverse="true" table="UserRole" schema="testDB">
            <key>
                <column name="user_id"/>
            </key>
            <many-to-many not-found="ignore" class="com.model.Role">
                <column name="role_id"/>
            </many-to-many>
        </list>
    </class>
</hibernate-mapping>